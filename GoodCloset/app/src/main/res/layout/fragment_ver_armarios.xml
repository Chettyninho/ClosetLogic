<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/firstcolor">

    <!-- RecyclerView para mostrar los armarios -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewVerArmarios"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:background="@color/firstcolor"/> <!-- Por defecto, se muestra -->

    <!-- ImageView para mostrar cuando el RecyclerView esté vacío -->
    <ImageView
        android:id="@+id/imageViewEmpty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/noarmarioimg"
        android:scaleType="centerInside"
        android:visibility="gone"
        android:background="@color/firstcolor"/>

</RelativeLayout>