<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dialog_bg">

    <ImageView
        android:id="@+id/imagenDialog"
        android:layout_width="110dp"
        android:layout_height="142dp"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:src="@color/white" />

    <TextView
        android:id="@+id/CambiarFotoButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cambiar Foto"
        android:clickable="true"
        android:textSize="18dp"
        android:layout_gravity="center"
        android:elevation="15dp"/>

    <Button
        android:id="@+id/btnEnviarImgProfile"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Hecho!!"
        android:visibility="gone"
        android:backgroundTint="@color/secondColorMasClarito"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/btnGoToEdit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Perfil"
        android:backgroundTint="@color/SecondColor"
        android:textColor="@color/white"/>
</LinearLayout>
